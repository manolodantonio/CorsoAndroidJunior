<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/story_text_tv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_margin="24dp"
            android:background="@android:color/darker_gray"
            android:text="Hello World!"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/story_personality_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/story_write_til"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/story_add_btn"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/story_write_tiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/continue_story"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/story_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="@string/add"
            app:layout_constraintBottom_toBottomOf="@id/story_write_til"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/story_write_til"
            app:layout_constraintTop_toTopOf="@id/story_write_til" />


        <TextView
            android:id="@+id/story_personality_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ia_personality"
            app:layout_constraintBaseline_toTopOf="@id/story_options_rg"
            app:layout_constraintStart_toStartOf="@id/story_options_rg" />

        <RadioGroup
            android:id="@+id/story_options_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/story_write_til"
            app:layout_constraintStart_toStartOf="@id/story_write_til">

            <RadioButton
                android:id="@+id/story_options_1_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good" />

            <RadioButton
                android:id="@+id/story_options_2_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/neutral" />

            <RadioButton
                android:id="@+id/story_options_3_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bad" />
        </RadioGroup>

        <Switch
            android:id="@+id/story_caps_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/all_caps"
            app:layout_constraintBottom_toTopOf="@id/story_write_til"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>